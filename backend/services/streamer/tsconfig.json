{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "compileOnSave": true,
  "include": [
    "**/*.ts"],
  "exclude": ["node_modules"]
}